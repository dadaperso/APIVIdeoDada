<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="LocDVD\APIBundle\Entity\TvRecord" table="tv_record">
    <indexes>
      <index name="tv_record_title_idx" columns="title"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="tv_record_ukey" columns="title,record_time_utc,channel_name"/>
      <unique-constraint name="tv_record_umapper" columns="mapper_id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="false"/>
    <field name="sortTitle" type="string" column="sort_title" length="255" nullable="false"/>
    <field name="channelName" type="string" column="channel_name" length="255" nullable="false"/>
    <field name="recordTime" type="datetime" column="record_time" nullable="true"/>
    <field name="createDate" type="datetime" column="create_date" nullable="true"/>
    <field name="modifyDate" type="datetime" column="modify_date" nullable="true"/>
    <field name="recordTimeUtc" type="datetime" column="record_time_utc" nullable="true"/>
    <many-to-one field="mapper" target-entity="Mapper">
      <join-columns>
        <join-column name="mapper_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
